<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_ui.home.HomeFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/bottom_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="24dp"
        android:src="@drawable/man"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toRightOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        tools:text="Gideon Hulu" />

    <TextView
        android:id="@+id/saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        android:text="Saldo"
        android:textColor="@color/black"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/saldo"
        app:layout_constraintTop_toBottomOf="@+id/saldo"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Rp.100000" />
    
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bottom_navview_container"
        android:elevation="2dp"
        />
    
    <ImageView
        android:id="@+id/topup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/top_up"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        android:elevation="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topup"
        app:layout_constraintLeft_toLeftOf="@id/topup"
        app:layout_constraintRight_toRightOf="@id/topup"
        android:text="Top Up"
        android:elevation="2dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/transfer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/transfer"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"
        android:elevation="2dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/transfer"
        app:layout_constraintLeft_toLeftOf="@id/transfer"
        app:layout_constraintRight_toRightOf="@id/transfer"
        android:text="Transfer"
        android:elevation="2dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/history"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/history"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"
        android:elevation="2dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/history"
        app:layout_constraintLeft_toLeftOf="@id/history"
        app:layout_constraintRight_toRightOf="@id/history"
        android:text="History"
        android:elevation="2dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_marginTop="48dp"
        android:background="@drawable/upper_corner"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_method"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:layout_constraintLeft_toLeftOf="@id/view3"
        android:layout_margin="32dp"
        app:cardCornerRadius="10dp"
        android:elevation="1dp"/>

    <ImageView
        android:id="@+id/payment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/cv_method"
        app:layout_constraintLeft_toLeftOf="@id/cv_method"
        app:layout_constraintRight_toRightOf="@id/cv_method"
        android:src="@drawable/metode_pembayaran"
        android:layout_marginTop="6dp"
        android:elevation="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Metode\nPembayaran"
        android:textAlignment="center"
        android:elevation="2dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/payment"
        app:layout_constraintLeft_toLeftOf="@id/payment"
        app:layout_constraintRight_toRightOf="@id/payment"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_data"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/cv_method"
        app:layout_constraintLeft_toRightOf="@id/cv_method"
        android:layout_marginStart="24dp"
        app:cardCornerRadius="10dp"
        android:elevation="1dp"/>

    <ImageView
        android:id="@+id/data"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/cv_data"
        app:layout_constraintLeft_toLeftOf="@id/cv_data"
        app:layout_constraintRight_toRightOf="@id/cv_data"
        android:src="@drawable/report"
        android:layout_marginTop="6dp"
        android:elevation="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Data\nProduk"
        android:textAlignment="center"
        android:elevation="2dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/data"
        app:layout_constraintLeft_toLeftOf="@id/data"
        app:layout_constraintRight_toRightOf="@id/data"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_maintance"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:elevation="1dp"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cv_data"
        app:layout_constraintTop_toTopOf="@id/cv_method" />

    <ImageView
        android:id="@+id/maintance"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/cv_maintance"
        app:layout_constraintLeft_toLeftOf="@id/cv_maintance"
        app:layout_constraintRight_toRightOf="@id/cv_maintance"
        android:src="@drawable/maintance"
        android:layout_marginTop="6dp"
        android:elevation="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Maintance"
        android:textAlignment="center"
        android:elevation="2dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/maintance"
        app:layout_constraintLeft_toLeftOf="@id/maintance"
        app:layout_constraintRight_toRightOf="@id/maintance"/>

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="32dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_method"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="5"
        app:sliderStartAutoCycle="true" />


</androidx.constraintlayout.widget.ConstraintLayout>